{
    "name": "ecolabor/filament-swiss-uid-search",
    "description": "Filament v4 plugin for searching Swiss companies via the UID (Unternehmens-Identifikationsnummer) webservice",
    "keywords": [
        "laravel",
        "filament",
        "swiss",
        "uid",
        "switzerland",
        "company",
        "search",
        "enterprise",
        "identification"
    ],
    "homepage": "https://github.com/ecolabor/filament-swiss-uid-search",
    "license": "MIT",
    "authors": [
        {
            "name": "ecolabor GmbH",
            "email": "info@ecolabor.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.16",
        "ecolabor/laravel-swiss-uid-search": "^1.0 || @dev"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Ecolabor\\FilamentSwissUidSearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ecolabor\\FilamentSwissUidSearch\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ecolabor\\FilamentSwissUidSearch\\FilamentSwissUidSearchServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
